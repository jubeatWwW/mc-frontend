{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "es2016",
      "es2015",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "@@core/*": [
        "src/app/core/*"
      ],
      "@@shared/*": [
        "src/app/shared/*"
      ],
      "@@modules/*": [
        "src/app/modules/*"
      ],
    }
  },
  "include": [
    "main.ts",
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "resolveJsonModule": true,
  "esModuleInterop": true
}